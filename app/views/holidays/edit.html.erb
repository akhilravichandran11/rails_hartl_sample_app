<% provide(:title, ' Update  Holiday ' ) %>

<h1>Update Holiday</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for @holiday , :url => { :action => "update" } do |f| %>
     
    <%= render 'shared/error_messages', object: f.object %>
    
    <%= f.label :Holiday_Name %>
    <%= f.text_field :hname %>
    
    <%= f.label :Status %>
    <%= f.select(:status, ["true","false"] ) %>
  
    <%= f.label :Holiday_Date %>
    <%= f.date_select :hdate %>
  
    <%= f.submit "Update Booking " , class: "btn btn-primary" %>
 
    <% end %>

    
  </div>
</div>