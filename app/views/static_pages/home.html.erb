<% if logged_in? %>

   <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
         <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
         <%= render 'shared/micropost_form' %>
      </section>
     </aside>
     <div class="col-md-8">
     <h3>Micropost Feed</h3>
     <%= render 'shared/feed' %>
   </div>
   </div>
   <div class="row">

 
     <div class="row">
       
      <% if current_user.admin %>
     
      <%= link_to " Create Conference Rooms " , new_room_path %>
     
      <% end %>
       
      
     </div>
     
     <div class="row">
      
      <%= link_to " Show Conference Rooms " , rooms_path %>
      
       
     </div>
    
     <div class="row">
       
      <%= link_to " Book Rooms " , new_confroombooking_path %>
      
       
     </div>
     
      <div class="row">
       
      <%= link_to " Show Bookings " , confroombookings_path %>
      
       
     </div>
  
 <% else %>

  <div class="center jumbotron">
   <h1>Welcome To The Sample Conference Room Booking App</h1>
   
   <%= link_to "Sign up now!" , signup_path , class: "btn btn-lg btn-primary" %>
   
  </div>

<% end %>

   
   
   
   